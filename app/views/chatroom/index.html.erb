
  <div id="headerChatroom">
    <%= render 'layouts/header' %>
  </div>

<div class="ui container">
<div class="ui grid">
  <div class="four wide column">
      <div class="ui vertical menu">
        <h4>Online users</h4>
        <div class="ui feed">
        <div class="event">
          <p>🏄‍♀️</p>
          <div class="content">
            <div class="summary">
              <b>Joe Henderson</b> 
            </div>
            
          </div>
        </div>

      </div>
      </div>
  </div>

  <div class="twelve wide column">
    <div id="chatbox">
      <div class="ui feed">
        
        <% @messages.each do |message| %>
          <div class="event">
            <p><%= message.user.icon %></p>
            <div class="content">
              <div class="summary">
                <b><%= message.user.username %></b> says
                <div class="date">
                  <%= message.user.created_at.strftime("%F %I:%M %P") %>
                </div>
              </div>
              <div class="extra text">
                <%= message.body %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>

    <div id="writeMessageBox" class="ui fluid input">
      <input type="text" placeholder="Write your message">
    </div>
  </div>


</div>

</div>

